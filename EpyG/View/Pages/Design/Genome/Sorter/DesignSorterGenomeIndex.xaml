<UserControl x:Class="EpyG.View.Pages.Design.Genome.Sorter.DesignSorterGenomeIndex"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             xmlns:sorterControls="clr-namespace:SorterControls;assembly=SorterControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="DesignSorterGenomeIndex" Style="{StaticResource Heading2}" />
                <sorterControls:SwitchEditControl DataContext="{Binding SwitchEditVm}"/> 
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
